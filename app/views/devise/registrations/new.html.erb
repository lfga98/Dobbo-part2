<%= render "devise/shared/navregis",:locals => {:action=>"Registro de nuevo usuario"}  %>
<div class="jumbotron well">
  <h5> El presente formulario es para registarse como nuevo usuario, los datos necesarios
    son sus datos personales, los datos de su consultorio o en donde realiza las consultas ya que
    se ocupan para los reportes y su correro y una contraseña
  </h5>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="row">
  <div class="col-md-4">
    <div class="jumbotron well">
      <div class="field">
        <h4>Datos Personales</h4>
        <hr>
        <%= f.label :"nombre(s)" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :apellido_paterno %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "off" , class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :apellido_materno %><br />
        <%= f.text_field :maternal_surname, autofocus: true, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :grado_o_titulo %><br />
        <%= f.text_field :tittle, autofocus: true, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :numero_telefonico %><br />
        <%= f.text_field :telephone, autofocus: true, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="jumbotron well">
      <h4>Datos del consultorio</h4>
      <hr>
      <div class="field">
        <%= f.label :calle %><br />
        <%= f.text_field :street, autofocus: true, autocomplete: "off",class: "form-control"  %>
      </div>

      <div class="field">
        <%= f.label :numero %><br />
        <%= f.number_field :number, autofocus: true, autocomplete: "off" ,class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :colonia %><br />
        <%= f.text_field :suburb, autofocus: true, autocomplete: "off" ,class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :municipio %><br />
        <%= f.text_field :mun, autofocus: true, autocomplete: "off",class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :ciudad %><br />
        <%= f.text_field :city, autofocus: true, autocomplete: "off" ,class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :país %><br />
        <%= f.text_field :country, autofocus: true, autocomplete: "off" ,class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :codigo_postal %><br />
        <%= f.text_field :cp, autofocus: true, autocomplete: "off" ,class: "form-control"%>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="jumbotron well">
      <h4>Datos de la cuenta</h4>
      <hr>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :contraseña %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :confirmacion_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Enviar", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
