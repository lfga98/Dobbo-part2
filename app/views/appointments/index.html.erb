        <th scope="col ">Hora Inicio</th>
        <th scope="col " >Hora Fin</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col" class="hidden-xs"></th>
        <th scope="col" class="hidden-xs"></th>
      </tr>
    </thead>
    <tbody id="appointments">
      <%= render @appointments %>
    </tbody>
  </table>
      <div class="col-md-offset-4">
        <%= paginate @appointments %>
    </div>
  </div>
</div>
</div>
